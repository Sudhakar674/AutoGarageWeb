<script>
    function validation() {
        debugger;
        if ($("#Company").val() == "") {
            $("#Company").addClass('errormessage');
            $("#Company").focus();
            return false;
        }
        else if ($("#CarName").val() == "") {
            $("#CarName").addClass('errormessage');
            $("#CarName").focus;
            return false;
        }
        else if ($("#ModelNumber").val() == "") {
            $("#ModelNumber").addClass('errormessage');
            $("#ModelNumber").focus;
            return false;
        }
        else if ($("#EngeenType").val() == "") {
            $("#EngeenType").addClass('errormessage');
            $("#EngeenType").focus;
            return false;
        }
        return true;
    }
</script>

