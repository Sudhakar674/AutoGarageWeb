@model AutoGarageWeb.Models.Master

@{
    ViewBag.Title = "InspectionListMaster";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("InspectionListMaster", "Master", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <div class="row">
                            <div class="col-md-5 col-sm-5 col-xs-5"><h2>Inspection List Master</h2></div>
                            <div class="col-md-6 col-sm-6 col-xs-6"><span style="color:red;"><b>@TempData["Message"]</b></span></div>
                            <div class="col-md-1 col-sm-1 col-xs-1"><a href="/Master/InspectionMaster" class="btn btn-primary">Add New</a></div>
                        </div>
                        <ul class="nav navbar-right panel_toolbox"> </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">

                        <div class="row" style="margin-bottom:30px;">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label>Inspection<span style="color:red"></span></label>
                                @Html.TextBoxFor(m => m.InspectionName, new { @class = "form-control" })
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4" style="margin-top:23px;">
                                <input type="submit" id="btnsearch" name="btnsearch" class="btn btn-success" value="Search" />
                            </div>
                        </div>

                        <table id="datatable-buttons" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th style="width:8%;">Sr No.</th>
                                    <th>Inspection</th>
                                    <th style="width:15%;">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    var i = 1;
                                    if (Model.lst != null)
                                    {
                                        foreach (var item in Model.lst)
                                        {
                                            <tr>
                                                <td>@i</td>
                                                <td>@item.InspectionName</td>
                                                <td>
                                                    <a href="/Master/InspectionMaster?Id=@item.Idencrypt" class='btn btn-sm btn-success edit-item-btn'>Edit<i class='fa fa-edit'></i></a>
                                                    <a href="/Master/DeleteInspectionMaster?Id=@item.Idencrypt" onclick="return confirm('Are you sure you want to delete this record ?')" class='btn btn-sm btn-danger remove-item-btn DeleteContactTr'><i class='fa fa-trash' aria-hidden='true'></i>Delete</a>
                                                </td>
                                            </tr>
                                            i++;
                                        }
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
<!-- jQuery -->
<script src="~/assets/vendors/jquery/dist/jquery.min.js"></script>


















