
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <!-- page content -->
    <div class="right_col" role="main">
        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Registration Form</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            @*<a href="/Home/List" class="btn btn-primary">Back To List</a>*@
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label for="fullname">Name  <span style="color:red">*</span></label>
                                <input type="text" id="fullname" class="form-control" name="fullname" required />
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label for="email">Email <span style="color:red">*</span></label>
                                <input type="email" id="email" class="form-control" name="email" data-parsley-trigger="change" required />
                            </div>
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <label for="email">Mobile <span style="color:red">*</span></label>
                                <input type="email" id="email" class="form-control" name="email" data-parsley-trigger="change" required />
                            </div>
                        </div>
                        <br />
                        <div class="row">
                            <div class="col-md-4 col-sm-4 col-xs-4">
                                <input type="submit" class="btn btn-success" value="Save" />
                                <a href="/Home/List" class="btn btn-info">Back To List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- /page content -->
}